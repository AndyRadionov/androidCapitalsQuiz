<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">]
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>

        <!--Hides ToolBar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Changes FadeOut Animations-->
    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--ActivityMain TextView styles-->
    <style name="main_screen_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/lobster</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="main_screen_subtitle" parent="main_screen_title">
        <item name="android:textSize">20sp</item>
    </style>

    <!--ActivityQuiz styles-->
    <style name="quiz_answer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:minLines">2</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="quiz_delimiter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layerType">software</item>
        <item name="android:src">@drawable/divider</item>
    </style>
</resources>
